

#include <bits/stdc++.h>

using namespace std;

int main()
{
    int n=6;
    int a[n]={1,2,3,4,10,45};
    int x=57;
    for(int i=0;i<n;i++)
    {
        int l=i+1;
        int r=n-1;
        while(l<r)
        {
          int sum=a[i]+a[l]+a[r];
          if(sum==x)
          {
              cout<<a[i]<<" "<<a[l]<<" "<<a[r];
              break;
          }
          else if(sum>x)
          {
              r--;
          }
          else
          {
              l++;
          }
        }
    }

    return 0;
}
